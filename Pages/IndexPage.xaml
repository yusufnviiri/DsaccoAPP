<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DsaccoAPP.Pages.IndexPage"
             Title="IndexPage">
    <ContentPage.MenuBarItems>
        <MenuBarItem Text="Loans">
            <MenuFlyoutItem Text="New Loan" Clicked="LoanApplication"></MenuFlyoutItem>
            <MenuFlyoutItem Text="View Loans" Clicked="LoanApplication"></MenuFlyoutItem>
            <MenuFlyoutItem Text="All Loans" Clicked="LoanApplication"></MenuFlyoutItem>
        </MenuBarItem>
        <MenuBarItem Text="Account">
            <MenuFlyoutItem Text="New Account" Clicked="LoanApplication"></MenuFlyoutItem>
            <MenuFlyoutItem Text="View Accounts" Clicked="LoanApplication"></MenuFlyoutItem>
            <MenuFlyoutItem Text="Deposit" Clicked="LoanApplication"></MenuFlyoutItem>

            <MenuFlyoutItem Text="Withdraw" Clicked="LoanApplication"></MenuFlyoutItem>
            <MenuFlyoutItem Text="View Deposits" Clicked="LoanApplication"></MenuFlyoutItem>
            <MenuFlyoutItem Text="View Withdraws" Clicked="LoanApplication"></MenuFlyoutItem>

        </MenuBarItem>
    </ContentPage.MenuBarItems>
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>