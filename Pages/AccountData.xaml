<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DsaccoAPP.Pages.AccountData"
             Title="AccountData">
    <VerticalStackLayout>
        <Label 
            Text="{Binding FName}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
    Text="{Binding LName}"
    VerticalOptions="Center" 
    HorizontalOptions="Center" />
        <Label 
    Text="{Binding Email}"
    VerticalOptions="Center" 
    HorizontalOptions="Center" />
        <Label 
    Text="{Binding Role}"
    VerticalOptions="Center" 
    HorizontalOptions="Center" />
        <Button Text="Back.."               
                HorizontalOptions="Center"                
                WidthRequest="150"
                VerticalOptions="Center"
                Clicked="loginUser"/>
    
        <Button Text="Back"
                HorizontalOptions="Center"
                WidthRequest="150"
                VerticalOptions="Center"
                Clicked="tologinUser"/>
    </VerticalStackLayout>
</ContentPage>