<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DsaccoAPP.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DsaccoAPP"
    xmlns:access="clr-namespace:DsaccoAPP.Pages"
    xmlns:pages="clr-namespace:DsaccoAPP.Pages"
    BackgroundColor="Blue"
    Shell.FlyoutBehavior="Flyout">
    <ShellContent 
        Title="Home"
        ContentTemplate="{DataTemplate access:Login}"
        Route="MainPage"  />
    <FlyoutItem Title="Register">
        <ShellContent ContentTemplate="{DataTemplate pages:Register}"/>
    </FlyoutItem>
            <FlyoutItem Title="Login">
        <ShellContent ContentTemplate="{DataTemplate pages:Login}"/>
    </FlyoutItem>
    <FlyoutItem Title="Index">
        <ShellContent ContentTemplate="{DataTemplate pages:IndexPage}"/>
    </FlyoutItem>



</Shell>
